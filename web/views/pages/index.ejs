<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>
<body class="container">
	<main>
<header id="qcTabTitle" class="qcContainer clearfix">
		<!-- ## PAGE TITLE ## -->
		
		<div class="col-8 col">
			<h1><a id="eventhor" href="about.ejs">
					EVEN<b class="thor">THOR<p>
				</a></h1>
		</div>
		<!-- ## PAGE DESC ## -->
		<div class="col-4 col">
			 <p id="accepted"><p>
		</div>
</header>

<div class="hentry qcContainer">
	
		<!-- ## PAGE CONTENT TABS ## -->
		<div id="qcPageContentTabs" class="clearfix">
			
			<!-- ## TAB LINKS ## -->
			<ul class="nav nav-tabs clearfix">
				<li class="active" style="border:none">
					<a data-toggle="tab" href="#tab-1">EVENT</a>
				</li>

				<li style="border-right:none;">
					<a data-toggle="tab" href="#tab-2">PARTICIPANTS</a>
				</li>
    		</ul>
    		
    		<div class="tab-content">
            <!-- ## TAB 1 ## -->
    		<div id="tab-1" class="tab-pane fade in active">
	    		<div class="box">
		    		
		    		<!-- ## TICKET BOX 1 ## -->
					<div class="qcTicketBox clearfix">
						<div class="qcTicketHead col-4 col" style="height: 338px;">
							<div class="box">

								<h2><%= name %></h2>
								<p> <%= type%> event by <%= admin %> </p>
								<a id="accept" class="qcTicketAction" data-toggle="tab" href="#tag-3"><span>ATTENDING</span></a>
                                <a id="decline" class="qcTicketAction" data-toggle="tab" href="#tag-3"><span>NOT ATTENDING</span></a>
							</div>
						</div>
						<div class="col-8 col" style="height: 338px;">
							<div class="box">
								<h3>Event Information</h3>
								<ul class="qcTktFeatureList">
								    <li>About: <%= description %></li>
                                    <li>Time: <%= time %></li>
									<li><a data-toggle="tab"  original-title="">Location: <%=location%> <%=room%></a></li>	
								</ul>
								
							</div>
						</div>
					</div>
					
				</div>
	    	</div>
			
			<div id="tab-2" class="tab-pane fade">
			<div class="box" style="">
		
		    		<!-- ## TICKET BOX 2 ## -->
					<div class="qcTicketBox clearfix">
						<div class="qcTicketHead col-4 col" style="height: 338px;">
							<div class="box">
								<h2>Participants</h2>
								<p>Currently registered users</p>
							</div>
						</div>
						<div class="col-8 col" style="height: 338px;">
							<div class="box" style="height:338px; overflow-y:auto;padding-top:0;">
								<ul class="qcTktFeatureList">
									<%for ( var i = 0; i < participants.length; i++){%>
										<% if(participants[i].name != '' && participants[i].attending == true){%>
											<li style="font-size:20px"><%=participants[i].name%></li>
											<%}%>
									<%}%>
								</ul>
								
							</div>
						</div>
					</div>

				</div>
			</div>

			<!-- ## TAB 3 ## -->
			<div id="tab-3" class="tab-pane fade">
				<div class="box" style="">
		
		    		<!-- ## TICKET BOX 3 ## -->
					<div class="qcTicketBox clearfix">
						<div class="qcTicketHead col-4 col" style="height: 338px;">
							<div class="box">
								<h2>Location</h2>
								<p>Choose a reminder time </p>
                                <select name="ticket-quantity" id="ticket-quantity" class="requiredField">
											<option value="">Time</option>
											<option value="1">1</option>
											<option value="2">2</option>
											<option value="3">3</option>
								</select>
							</div>
						</div>
						<div class="col-8 col" style="height: 338px;">
							<div class="box">
								<h3>RSVP</h3>
								<a class="qcTicketAction" href="#"><span>ATTENDING</span> </a>
                                <a class="qcTicketAction" href="#"><span>NOT ATTENDING</span> </a>
							</div>
						</div>
					</div>

				</div>
		<!-- ## PAGE CONTENT TABS END ## -->
	
	</div>
	</main>

	<footer>
		<% include ../partials/footer %>
	</footer>
	
</body>
</html>